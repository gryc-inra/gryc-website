version: '2'

services:
    nginx:
        container_name: gryc-prod-nginx
        ports:
            - 127.0.0.1:8080:80
        volumes_from:
            - app

    app:
        container_name: gryc-prod-app
        volumes:
            - ./shared/files:/var/www/html/files:rw
            - ./shared/parameters.yml:/var/www/html/app/config/parameters.yml:ro

    redis:
        container_name: gryc-prod-redis

    db:
        container_name: gryc-prod-db
        environment:
            - MYSQL_ROOT_PASSWORD=gryc
            - MYSQL_USER=gryc
            - MYSQL_PASSWORD=gryc
            - MYSQL_DATABASE=gryc

    es:
        container_name: gryc-prod-elasticsearch
        volumes:
            - es_data:/usr/share/elasticsearch/data

    rabbitmq:
        container_name: gryc-prod-rabbitmq
        environment:
            - RABBITMQ_DEFAULT_USER=gryc
            - RABBITMQ_DEFAULT_PASS=gryc
