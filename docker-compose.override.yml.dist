version: '2'

services:
    nginx:
        container_name: gryc-nginx
        build: ./docker/nginx
        ports:
            - 127.0.0.1:8082:80
        volumes:
            - ./docker/nginx/default.conf:/etc/nginx/conf.d/default.conf:ro
            - ./docker/nginx/nginx.conf:/etc/nginx/nginx.conf:ro
            - .:/var/www/html:ro

    app:
        container_name: gryc-app
        build: ./
        volumes:
            - .:/var/www/html:rw

    redis:
        container_name: gryc-redis

    db:
        container_name: gryc-db
        environment:
            - MYSQL_ROOT_PASSWORD=gryc
            - MYSQL_USER=gryc
            - MYSQL_PASSWORD=gryc
            - MYSQL_DATABASE=gryc
        ports:
            - 127.0.0.1:3308:3306

    es:
        container_name: gryc-elasticsearch
        ports:
            - 127.0.0.1:9200:9200
            - 127.0.0.1:9300:9300
        volumes:
            - es1_data:/usr/share/elasticsearch/data
            - ./docker/elasticsearch/elasticsearch.yml:/usr/share/elasticsearch/config/elasticsearch.yml:ro

    es-head:
        container_name: gryc-elasticsearch-head
        image: mobz/elasticsearch-head:5
        ports:
            - 127.0.0.1:9100:9100
        networks:
            - default

    rabbitmq:
        container_name: gryc-rabbitmq
        environment:
            - RABBITMQ_DEFAULT_USER=gryc
            - RABBITMQ_DEFAULT_PASS=gryc
        ports:
            - 127.0.0.1:15672:15672
