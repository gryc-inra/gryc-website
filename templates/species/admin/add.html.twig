{% extends 'base.html.twig' %}

{% block title %}
    Add a species - {{ parent() }}
{% endblock %}

{% block metaTags %}
    <meta name="robots" content="noindex, nofollow">
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('admin_index') }}">Administration</a></li>
    <li class="breadcrumb-item"><a href="{{ path('species_list') }}">Species management</a></li>
    <li class="breadcrumb-item active">Add a species</li>
{% endblock %}

{% block body %}
    <h1>Add a species</h1>

    {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

    {{ form_start(form, { 'attr': { 'data-url': path('species_getjson', {'taxid': '__taxid__'}) } }) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">Save</button>
    {{ form_end(form) }}

{% endblock %}
