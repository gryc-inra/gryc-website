<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

        <title>{% block title %}GRYC{% endblock %}</title>
        {% block metaTags %}
            <meta name="robots" content="index">
        {% endblock %}

        {% block stylesheets %}
            <!-- Bootstrap -->
            <!-- Latest compiled and minified CSS -->
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
            <!-- Optional theme -->
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">

            {% stylesheets 'css/bootstrap-modifications.css'
                filter='uglifycss' filter='cssrewrite'  output='css/compiled/app.css' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>

    <body>
        <div class="wrapper">
            <header>
                <div id="logo">
                    <a href="{{ path('homepage') }}"><img src="{{ asset('images/GRYC_logo_beta_v2.png') }}" alt="GRYC" /></a>
                </div>
            </header>

            <!-- Navbar -->
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <div id="navbar" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-left">
                            <li><a href="{{ path('homepage') }}"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                            <li><a href="#search"><span class="glyphicon glyphicon-search"></span> Search</a></li>
                            <li><a href="#blast"><span class="glyphicon glyphicon-cog"></span> BLAST</a></li>
                            <li><a href="{{ path('species_homepage') }}"><span class="glyphicon glyphicon-th-list"></span> Available species</a></li>
                        </ul>

                        <ul class="nav navbar-nav navbar-right">
                            {# Si l'utilisateur est connecté #}
                            {% if app.user %}
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ app.user.username }} <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        {# Si l'utilisateur est un administrateur #}
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <li><a href="{{ path('admin_index') }}"><span class="glyphicon glyphicon-cog"></span> Administration</a></li>
                                            {% set nbMessages =  render(controller("AppBundle:ContactUs:numberMessage")) %}
                                            <li><a href="{{ path('contact_us_homepage') }}"><span class="glyphicon glyphicon-envelope"></span> {% if nbMessages > 1 %}Messages{% else %}Message{% endif %} <span class="badge">{{ nbMessages }}</span></a></li>
                                            <li role="separator" class="divider"></li>
                                        {% endif %}
                                        <li><a href="{{ path("fos_user_profile_show") }}"><span class="glyphicon glyphicon-user"></span> Profile</a></li>
                                        <li><a href="{{ path("fos_user_security_logout") }}"><span class="glyphicon glyphicon-log-out"></span> Log out</a></li>
                                    </ul>
                                </li>
                            {% else %}
                                <li><a href="{{ path("fos_user_security_login") }}"><span class="glyphicon glyphicon-log-in"></span> Log in</a></li>
                                <li><a href="{{ path("fos_user_registration_register") }}"><span class="glyphicon glyphicon-pencil"></span> Sign up</a></li>
                            {% endif %}
                        </ul>

                        <form id="quick-search-form" class="navbar-form navbar-right hidden-sm">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Quick Search">
                                <span class="input-group-btn">
                                    <button id="quick-search-submit" class="btn btn-default" type="submit" ><span class="glyphicon glyphicon-search"></span></button>
                                </span>
                            </div>
                        </form>
                    </div><!--/.nav-collapse -->
                </div>
            </nav>

            <div class="container">
                {# On affiche tous les messages flash dont le nom est « success » #}
                {% for flash_message in app.session.flashbag.get('success') %}
                    <div class="alert alert-success alert-dismissible" role="alert" data-toggle="auto-dismiss">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>Succès!</strong> {{ flash_message }}
                    </div>
                {% endfor %}

                {# On affiche tous les messages flash dont le nom est « info » #}
                {% for flash_message in app.session.flashbag.get('info') %}
                    <div class="alert alert-info alert-dismissible" role="alert" data-toggle="auto-dismiss">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>Info!</strong> {{ flash_message }}
                    </div>
                {% endfor %}

                {# On affiche tous les messages flash dont le nom est « warning » #}
                {% for flash_message in app.session.flashbag.get('warning') %}
                    <div class="alert alert-warning alert-dismissible" role="alert" data-toggle="auto-dismiss">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>Attention!</strong> {{ flash_message }}
                    </div>
                {% endfor %}

                {# On affiche tous les messages flash dont le nom est « danger » #}
                {% for flash_message in app.session.flashbag.get('danger') %}
                    <div class="alert alert-danger alert-dismissible" role="alert" data-toggle="auto-dismiss">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>Danger!</strong> {{ flash_message }}
                    </div>
                {% endfor %}

                <ol class="breadcrumb">
                    {% block breadcrumb %}
                        <li><a href="{{ path('homepage') }}">Home</a></li>
                    {% endblock %}
                </ol>

                {% block body %}
                {% endblock %}
            </div>

            <div class="push"></div>
        </div>

        <footer>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3 text-center hidden-xs hidden-sm">
                        <a href="http://www.inra.fr" target="_blank"><img src="{{ asset('images/INRA.png') }}" alt="INRA" height="80"/></a>
                    </div>

                    <div class="col-md-3 text-justify hidden-xs hidden-sm">
                        <ul class="nav nav-pills nav-stacked">
                            <li role="presentation"><a href="{{ path('contact_us') }}">Contact us</a></li>
                            <li role="presentation"><a href="{{ path('privacy-policy') }}">Privacy policy</a></li>
                        </ul>
                    </div>

                    <div class="col-md-3 text-center visible-xs visible-sm">
                        <ul class="nav nav-pills nav-stacked">
                            <li role="presentation"><a href="{{ path('contact_us') }}">Contact us</a></li>
                            <li role="presentation"><a href="{{ path('privacy-policy') }}">Privacy policy</a></li>
                        </ul>
                        <hr>
                    </div>

                    <div class="col-md-3 text-center">
                        © GRYC - INRA; All Rights Reserved.<br>
                        Publication director: Cécile Neuvéglise<br>
                        Developers and administrators:<br>
                        Hugo Devillers, Mathieu Piot<br>
                    </div>

                    <div class="col-md-3 text-center hidden-xs hidden-sm">
                        <a href="http://igenolevures.org/" target="_blank"><img src="{{ asset('images/igenolevure.png') }}" alt="iGenoLevures" height="80"/></a>
                    </div>
                </div>
            </div><!-- /Container-Fluid -->
        </footer><!-- /Footer -->

        {% block javascripts %}
            <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
            <!-- Latest compiled and minified JavaScript -->
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

            {% javascripts
                'js/auto-dismiss-alert.js'
                'js/quick-search.js'
            filter='uglifyjs2' output='js/compiled/app.js' %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}

        {% endblock %}
    </body>
</html>
