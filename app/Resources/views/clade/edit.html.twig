{# app/Ressources/views/clade/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
    Edit the clade: {{ clade.name }}
{% endblock %}

{% block metaTags %}
    <meta name="robots" content="noindex">
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('admin_index') }}">Administration</a></li>
    <li class="breadcrumb-item"><a href="{{ path('clade_index') }}">Clade management</a></li>
    <li class="breadcrumb-item active">Edit the clade: {{ clade.name }}</li>
{% endblock %}

{% block body %}
    <h1>Edit the clade: {{ clade.name }}</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">Save changes</button>
    {{ form_end(form) }}
{% endblock %}
