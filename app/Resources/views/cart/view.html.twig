{% extends 'base.html.twig' %}

{% block title %}
    Cart - {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item active">Cart</li>
{% endblock %}

{% block body %}
    <h1>Generate FASTA from stored locus</h1>

    <div id="accordion" role="tablist" class="my-4">
        <div class="card">
            <div class="card-header" role="tab" id="headingOne">
                <h5 class="mb-0">
                    <a data-toggle="collapse" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <span class="fa fa-shopping-cart" aria-hidden="true"></span> Cart content
                    </a>
                </h5>
            </div>

            <div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
                <div class="card-body">
                    <div class="mb-3 float-right">
                        <a href="{{ path('cart_empty') }}" class="btn btn-sm btn-danger"><span class="fa fa-trash" aria-hidden="true"></span> Empty cart</a>
                    </div>

                    <table class="table table-striped">
                        <tr>
                            <th>Locus</th>
                            <th>Species</th>
                            <th>Strain</th>
                            <th>Chromosome/Scaffold</th>
                            <th>Note</th>
                            <th></th>
                        </tr>
                        {% for locus in cartElements if cartElements is not empty %}
                            <tr>
                                <td><a href="{{ path('locus_view', { 'species_slug': locus.chromosome.strain.species.slug, 'strain_slug': locus.chromosome.strain.slug, 'chromosome_slug': locus.chromosome.slug, 'locus_name': locus.name }) }}">{{ locus.name }}</a></td>
                                <td>{{ locus.chromosome.strain.species.scientificName }}</td>
                                <td>{{ locus.chromosome.strain.name }}</td>
                                <td>{{ locus.chromosome.name }}</td>
                                <td>{{ locus.note|truncate }}</td>
                                <td>
                                    <a class="btn btn-secondary btn-sm cart-remove-btn" href="{{ path('cart_remove', {'id': locus.id}) }}" role="button">
                                        <span class="fa fa-times" aria-hidden="true"></span>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">You cart is empty.</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>

    <h2>Configure the FASTA generator</h2>

    {{ form_start(form) }}
        {{ include('cart/_form_fields.html.twig') }}

        <button type="submit" class="btn btn-primary" {{ cartElements is empty ? 'disabled' }}>
            <span class="fa fa-play" aria-hidden="true"></span> Generate FASTA
        </button>
    {{ form_end(form) }}
{% endblock %}
