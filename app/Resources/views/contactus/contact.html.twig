{% extends "::base.html.twig" %}

{% block title %}Contact us - {{ parent() }}{% endblock %}

{% block breadcrumb %}{{ parent() }} <li class="active">Contact us</li>{% endblock %}

{% block body %}
<h2>Contact us</h2>
    {{ form_start(form) }}
        {{ form_row(form.firstName) }}
        {{ form_row(form.lastName) }}
        {{ form_row(form.email) }}
        {{ form_row(form.category) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.message) }}
        {{ form_row(form.recaptcha) }}

        {{ form_rest(form) }}

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default"><span class="fa fa-paper-plane" aria-hidden="true"></span> Send</button>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
