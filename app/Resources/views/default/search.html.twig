{# app/Ressources/views/default/search.html.twig #}

{% extends 'base.html.twig' %}

{%block title %}
    Search Results - {{ parent() }}
{% endblock %}

{% block body %}
    <h2>Results for "<i>{{ keyword }}</i>"</h2>
    
    {% if results is not empty %}
        {% for result in results %}
            {{ result.id }} - {{ result.firstName }} {{ result.lastName }} - {{ result.emailCanonical }}
        {% endfor %}
    {% else %}
        <p>There is no result.</p>
    {% endif %}
{% endblock %}