<div class="modal fade text-left" id="confirmationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <h4>Do you confirm the deletion?</h4>
                <p>Be careful, this action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btnNo" data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" class="btn btn-danger" id="btnYes" data-dismiss="modal">
                    <span class="fas fa-trash-alt"></span> Delete
                </button>
            </div>
        </div>
    </div>
</div>
