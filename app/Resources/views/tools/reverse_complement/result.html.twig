{% extends 'base.html.twig' %}

{% block title %}
    Sequence manipulation - {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('tools') }}">Tools</a></li>
    <li class="breadcrumb-item"><a href="{{ path('reverse_complement') }}">Reverse complement</a></li>
    <li class="breadcrumb-item active">Result: {{ action }}</li>
{% endblock %}

{% block body %}
    <h1>Sequence Manipulation: {{ action }}</h1>

    <button id="reverse-complement-copy-button" class="btn btn-secondary">
        <span class="fa fa-clipboard" aria-hidden="true"></span> Copy the result in clipboard
    </button>

    <hr>

    <div class="col-sm-12">
        <textarea id="reverse-complement-result" class="form-control fasta-input" rows="20" >
            {{- result -}}
        </textarea>
    </div>
{% endblock %}
