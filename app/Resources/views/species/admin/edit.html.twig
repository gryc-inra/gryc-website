{% extends 'base.html.twig' %}

{% block title %}
    Edit the species: {{ species.scientificname }} - {{ parent() }}
{% endblock %}

{% block metaTags %}
    <meta name="robots" content="noindex, nofollow">
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('admin_index') }}">Administration</a></li>
    <li class="breadcrumb-item"><a href="{{ path('species_list') }}">Species management</a></li>
    <li class="breadcrumb-item active">Edit the species: {{ species.scientificname }}</li>
{% endblock %}

{% block body %}
    <h1>Edit the species: {{ species.scientificname }}</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">Save changes</button>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(function () {
            collectionType($('div#species_lineages'), 'Add a lineage', 'add_lineage');
            collectionType($('div#species_synonymes'), 'Add a synonym', 'add_synonym');
        });
    </script>
{% endblock %}
