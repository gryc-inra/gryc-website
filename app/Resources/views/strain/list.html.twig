{# app/Ressources/views/strain/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
    Strain management
{% endblock %}

{% block metaTags %}
    <meta name="robots" content="noindex">
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('admin_index') }}">Administration</a></li>
    <li class="active">Strain management</li>
{% endblock %}

{% block body %}
    <h1>Strains</h1>

    <div class="table-responsive">
        <table class="table table-striped">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Species</th>
                <th>Public</th>
                <th>Actions</th>
            </tr>
            {% for strain in strains %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ strain.species.scientificname }}</td>
                    <td>{{ strain.name }}</td>
                    <td>{{ strain.isPublicToString }}</td>
                    <td>
                        <div class="btn-group btn-group-xs" role="group">
                            <a class="btn btn-warning" href="{{ path('strain_edit', { 'id': strain.id }) }}" ><span class="glyphicon glyphicon-edit"></span> Edit</a>
                            <a class="btn btn-info" href="{{ path('strain_user_rights', { 'id': strain.id }) }}" ><span class="glyphicon glyphicon-user"></span> User rights</a>
                            <a class="btn btn-danger" href="{{ path('strain_delete', { 'id': strain.id }) }}"><span class="glyphicon glyphicon-trash"></span> Delete</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
