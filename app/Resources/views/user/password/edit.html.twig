{% extends 'base.html.twig' %}

{% block metaTags %}
    <meta name="robots" content="noindex, nofollow">
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('user_profile') }}">My profile</a></li>
    <li class="breadcrumb-item active">Change password</li>
{% endblock %}


{% block body %}
    {{ form_start(form) }}
        <fieldset>
            <legend>Change password</legend>
            {{ form_row(form.currentPassword) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}
        </fieldset>

        {{ form_rest(form) }}

        <button type="submit" id="change_password_submit" class="btn btn-primary">Change password</button>
    {{ form_end(form) }}
{% endblock %}
