{% extends 'base.html.twig' %}

{% block metaTags %}
    <meta name="robots" content="noindex, nofollow">
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('user_profile') }}">My profile</a></li>
    <li class="breadcrumb-item active">Edit</li>
{% endblock %}

{% block body %}
    {{ form_start(form) }}
        <fieldset>
            <legend>Edit profile</legend>
            {{ form_row(form.firstName) }}
            {{ form_row(form.lastName) }}
        </fieldset>

        {{ form_rest(form) }}

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" name="login" class="btn btn-secondary" value="Save changes" />
            </div>
        </div>

    {{ form_end(form) }}
{% endblock %}
