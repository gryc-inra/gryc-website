{% extends 'base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item active">Login</li>
{% endblock %}


{% block body %}
    {% if error %}
        <div class="alert alert-warning" role="alert">{{ error.message }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" class="form-horizontal">

        <div class="form-group">
            <label for="username">Email</label>
            <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}">
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="_password">
        </div>

        <div class="form-check">
            <label class="form-check-label">
                <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me" checked>
                Keep me logged in
            </label>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="btn btn-primary" name="login">Login</button>
    </form>

    <p class="my-3">
        Forgot password ? <a href="{{ path('user_resetting_request') }}">Ask a new password</a><br>
        New to CollectionManager? <a href="{{ path('user_registration') }}">Create an account</a>
    </p>
{% endblock %}
