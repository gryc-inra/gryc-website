{% extends 'base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item active">Login</li>
{% endblock %}


{% block body %}
    {% if error %}
        <div class="alert alert-warning" role="alert">{{ error.message }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" class="form-horizontal">

        <div class="form-group">
            <label class="col-sm-2 control-label required" for="username">Email</label>
            <div class="col-sm-10">
                <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label required" for="password">Password</label>
            <div class="col-sm-10">
                <input type="password" id="password" name="_password" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="remember_me" name="_remember_me" checked /> Keep me logged in
                    </label>
                </div>
            </div>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" name="login" class="btn btn-secondary" />
            </div>
        </div>
    </form>

    <div class="row">
        Forgot password ? <a href="{{ path('user_resetting_request') }}">Ask a new password</a>.<br>
        New to CollectionManager? <a href="{{ path('user_registration') }}">Create an account</a>.
    </div>
{% endblock %}
