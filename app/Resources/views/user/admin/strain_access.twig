{# app/Ressources/views/admin/user/edit-rights.html.twig #}
{% extends 'base.html.twig' %}

{% block metaTags %}
    <meta name="robots" content="noindex, nofollow">
{% endblock %}

{% block title %}
    Edit {{ user.username }} - {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('admin_index') }}">Administration</a></li>
    <li class="breadcrumb-item"><a href="{{ path('user_index') }}">User list</a></li>
    <li class="breadcrumb-item active">{{ user.username }} rights</li>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header"><h2>{{ user.username }} <small>{{ user.firstName }} {{ user.lastName }}</small></h2></div>
        <div class="card-body">
            {{ form_start(form) }}
            <div id="admin_user_rights">
                {{ form_errors(form) }}
                <div class="form-group">
                    {% for species in speciesList %}
                        <div class="col-sm-10 col-sm-offset-2">
                            {% spaceless %}
                            <fieldset>
                                <legend>{{ species.scientificName }} <small><a href="#" onclick="checkAll('{{ species.slug }}')">All</a>/<a href="#" onclick="uncheckAll('{{ species.slug }}')">None</a></small></legend>
                                    {% for strain in species.strains %}
                                        {% set key = strain.id %}
                                        {% if strain.isPublic %}
                                            {{ form_widget(form.authorizedStrains[key], {'disabled': true, 'attr': { 'data-name': species.slug } } ) }}
                                        {% else %}
                                            {{ form_widget(form.authorizedStrains[key], { 'attr': { 'data-name': species.slug } } ) }}
                                        {% endif %}
                                    {% endfor %}
                            </fieldset>
                            {% endspaceless %}
                        </div>
                    {% endfor %}
                </div>

                {{ form_rest(form) }}
            </div>

            <button type="submit" class="btn btn-primary">Save changes</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Uncheck all disabled checkbox
        $(document).ready(function() {
           $(":checkbox:disabled").prop('checked', false);
        });

        // Check all checkboxes no disabled
        function checkAll(groupName) {
            $(":checkbox[data-name=" + groupName + "]:not(:disabled)").prop('checked', true);
        }

        // Uncheck all checkboxes disabled too
        function uncheckAll(groupName) {
            $("input:checkbox[data-name=" + groupName + "]").prop('checked', false);
        }
    </script>
{% endblock %}
