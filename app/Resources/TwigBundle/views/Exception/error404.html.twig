{% extends 'base.html.twig' %}

{% block title %}
    Error 404 - {{ parent() }}
{% endblock %}

{% block metaTags %}
    <meta name="robots" content="noindex">
{% endblock %}

{% block breadcrumb %}{{ parent() }} <li class="active">Error 404 !</li>{% endblock %}

{% block body %}
    <div class="text-center row">
        <div class="col-md-4">
            <img src="{{ asset('images/ghost-404-error.svg') }}" alt="Ghost" width="350" />
        </div>

        <div class="col-md-6">
            <span style="font-size: 10em">404</span>
            <h1 style="font-size: 4em">You're lost</h1>
            <h2>Poor visitor... This page doesn't exist...</h2>
        </div>
    </div>
{% endblock %}
